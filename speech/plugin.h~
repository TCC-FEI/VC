#ifdef SPEECH_PLUGIN_H
#define SPEECH_PLUGIN_H

#include <glib.h>
#include <gst/gst.h>

typedef struct {
    GstElement* pipeline;
} speech_plugin_t;

speech_plugin_t* speech_plugin_create();
void speech_plugin_destroy(speech_plugin_t* plugin);

gboolean speech_plugin_start(speech_plugin_t* plugin);
gboolean speech_plugin_stop(speech_plugin_t* plugin); 

#endif
